{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/base",
        "plugin:vue/vue3-essential",
        "plugin:vue/vue3-strongly-recommended",
        "plugin:vue/vue3-recommended"
    ],
    "globals": {
        "axios": false
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-lines": [
          "error",
          300
        ],
        "no-var": 2,
        "no-empty": 2,
        "no-unused-vars": 2,
        "no-undef": 2,
        "no-mixed-spaces-and-tabs": 2,
        "arrow-parens": 2,
        "prefer-arrow-callback": 2,
        "no-trailing-spaces": 2,
        "complexity": [
            "error",
            6
        ]
    }
}
